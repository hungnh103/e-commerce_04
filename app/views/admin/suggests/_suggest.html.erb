<tr>
  <td><%= admin_page params[:page], suggest_counter %></td>
  <td><%= suggest.product_name %></td>
  <td><%= suggest.product_description %></td>
  <td><%= link_to t(".edit"),
    edit_admin_category_path(suggest), class: "btn btn-success"%>
  </td>
  <td>
    <div class="dropdown categories">
      <button class="btn btn-default dropdown-toggle"
        type="button" data-toggle="dropdown">
        <%= t "suggests.action" %><span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li>
          <%= link_to t("suggests.reject"), admin_suggest_path(suggest, status: Settings.suggest.rejected),  method: "patch" %>
        </li>
        <li>
          <%= link_to t("suggests.accept"), admin_suggest_path(suggest, status: Settings.suggest.accept),  method: "patch" %>
        </li>
      </ul>
    </div>
  </td>
  <td>
    <%= link_to t(".delete"),
      admin_category_path(suggest), method: :delete, class: "btn btn-danger",
        data: {confirm: t("sure?")} %>
  </td>
</tr>
