<% provide :title, t("products.manage_product") %>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t "no" %></th>
      <th><%= t "name" %></th>
      <th><%= t "products.subcategory" %></th>
      <th><%= t "products.description" %></th>
      <th><%= t "products.quantity" %></th>
      <th><%= t "products.price" %></th>
      <th><%= t "view.edit" %></th>
      <th><%= t "view.delete" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "admin/products/product", collection: @products %>
    <tr>
      <td colspan="8">
        <div class="text-center">
          <%= link_to t("products.new_product"),
            new_admin_product_path,
            class: "col-md-6 col-md-offset-3 btn btn-success" %>
        </div>
      </td>
    </tr>
  </tbody>

  <div class="col-md-12 pagi">
    <div class="paginate">
      <%= paginate @products %>
    </div>
    <div class="col-md-2 col-md-offset-4 import-csv">
      <%= form_tag import_admin_products_path, multipart: true do %>
        <div class="btn btn-success fileinput-button csv">
          <i class="fa fa-pencil"></i>
          <%= file_field_tag :file %>
        </div>
        <%= submit_tag t("import"), class: "btn btn-default import-btn" %>
      <% end %>
    </div>
  </div>
</table>
