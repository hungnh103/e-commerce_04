<% provide :title, t("products.manage_product") %>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t "no" %></th>
      <th><%= t "name" %></th>
      <th><%= t "products.subcategory" %></th>
      <th><%= t "products.description" %></th>
      <th><%= t "products.quantity" %></th>
      <th><%= t "products.price" %></th>
      <th><%= t "view.edit" %></th>
      <th><%= t "view.delete" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "admin/products/product", collection: @products %>
    <tr>
      <td colspan="8">
        <div class="text-center">
          <%= link_to t("products.new_product"),
            new_admin_product_path,
            class: "col-md-6 col-md-offset-3 btn btn-success" %>
        </div>
      </td>
    </tr>
  </tbody>
  <div class="paginate">
    <%= paginate @products %>
  </div>
</table>
