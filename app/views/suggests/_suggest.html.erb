<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @suggests do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label :product_name %>
      <%= f.text_field :product_name, class: "form-control", required: "true" %>
      <%= f.label :product_description %>
      <%= f.text_area :product_description, placeholder:
        t("suggests.new_suggest_product"), class: "form-control",
        rows: Settings.rows, required: "true" %>
      <%= f.submit t("submit"), class: "btn btn-default" %>
    <% end %>
  </div>
</div>
